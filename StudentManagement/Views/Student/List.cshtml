@model IEnumerable<StudentManagement.Core.Model.StudentModel>
@{
    Layout = null;
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/a10c7f6efa.js" crossorigin="anonymous"></script>
</head>
<body style="background:linear-gradient(#4158d0,#c850c0)">
    <div class="container">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-md-12 col-xl-10" style="width:200%;">
                <div class="card" style="height:80%;box-shadow:5px 5px;">
                    <nav class="navbar navbar-light bg-light justify-content-between px-5 ">
                        <h5 class="mb-0" style="font-style:oblique"><i class="fa-solid fa-list"></i>  Details of Students</h5>
                        <div class="form-inline pt-3">
                            <button class="btn" onclick="location.href='@Url.Action("Create","Student")'" style="font-style:oblique;border:10px;background:black;color:white;"><i class="fa fa-plus-circle"></i>   Add New</button>
                        </div>
                    </nav>
                    <div class="card-body" data-mdb-perfect-scrollbar="true" style="position: relative; height: 400px; overflow:auto">
                    <table class="table table-borderless"  cellspacing="0" width="100%" style="font-style:oblique;">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Age</th>
                                <th>Gender</th>
                                <th>Department</th>
                                <th>class</th>
                                <th>Location</th>
                                <th>Year of Joining</th>
                                <th>Action</th>
                            </tr>
                         </thead>
                          <tbody>
                                @foreach (var i in Model)
                                {

                                <tr>
                                    <td>
                                            @Html.DisplayFor(model => i.FirstName)
                                    </td>

                                    <td>
                                            @Html.DisplayFor(model => i.LastName)
                                    </td>
                                    <td>
                                            @Html.DisplayFor(model => i.Age)
                                    </td>
                                    <td>
                                            @Html.DisplayFor(model => i.Gender)
                                    </td>
                                    <td>
                                            @Html.DisplayFor(model => i.Department)
                                    </td>
                                    <td>
                                            @Html.DisplayFor(model => i.Standard)
                                    </td>
                                    <td>
                                            @Html.DisplayFor(model => i.Location)
                                    </td>

                                    <td>
                                            @Html.DisplayFor(model => i.year)
                                    </td>
                                    <td>
                                            @Html.ActionLink(" ","Edit", new {StudentID=i.StudentID},new{@class="fa-solid fa-pen-to-square",title="Edit"})
                                        <button onclick="return confirm('Are you sure want to delete this record?')" style="background:none;border:none">
                                                @Html.ActionLink(" ", "Delete", new {StudentID = i.StudentID},new{@class="fas fa-trash-alt text-danger",title="Delete" })
                                        </button>
                                    </td>
                                </tr>
                                }
                          </tbody>
                       
                    </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

